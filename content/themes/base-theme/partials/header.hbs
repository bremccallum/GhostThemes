<div class="header-folio" role="banner">
    {{#if @blog.logo}}
        <a class="logo-folio" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
    {{/if}}
    <h1 class="blogtitle-folio">
        <a title="{{@blog.title}}" href="{{@blog.url}}">{{{@blog.title}}}</a>
    </h1>
    <p class="blogdescription-folio">
        <a title="{{@blog.title}}" href="{{@blog.url}}">
            {{@blog.description}}
        </a>
    </p>
</div>